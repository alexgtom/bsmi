<%= render "users/shared/error_messages", :target => @user %>

<input type="hidden" name="owner_type" value="<%= params[:owner_type]%>">
<input type="hidden" name="invite_code" value="<%= params[:invite_code]%>">
<% if params[:action] == "adv_new" || params[:action] == "adv_edit" %>
<p>
  <%= form.label :owner_type %><br />
  <%= form.select :owner_type, :options => User.user_types_for_select %>
</p>
<% end %>
<p>
  <%= form.label :first_name %><br />
  <%= form.text_field :first_name %>
</p>
<p>
  <%= form.label :last_name %><br />
  <%= form.text_field :last_name %>
</p>
<p>
  <%= form.label :street_address %><br />
  <%= form.text_field :street_address %>
</p>
<p>
  <%= form.label :city %><br />
  <%= form.text_field :city %>
</p>
<p>
  <%= form.label :state %><br />
  <%= form.text_field :state %>
</p>
<p>
  <%= form.label :zipcode %><br />
  <%= form.text_field :zipcode %>
</p>
<p>
  <%= form.label :phone_number %><br />
  <%= form.text_field :phone_number %>
</p>
<p>
  <%= form.label :email %><br />
  <%= form.text_field :email %>
</p>
<p>
  <%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
  <%= form.password_field :password %>
</p>
<p>
  <%= form.label :password_confirmation %><br />
  <%= form.password_field :password_confirmation %>
</p>
